<resources>
    <style name="MaterialFullScreen" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="TextToolbar">
        <item name="fontFamily">@font/manrope</item>
        <item name="android:textSize">20dp</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    <style name="ToolbarGallery" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="actionMenuTextColor">@color/text_light</item>
        <item name="contentInsetStart">16dp</item>
    </style>
</resources>